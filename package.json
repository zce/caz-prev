{
  "name": "caz",
  "version": "0.1.5",
  "description": "A simple yet powerful template-based Scaffolding tools for my personal productivity.",
  "keywords": [
    "scaffolding",
    "generator",
    "cli",
    "typescript",
    "jest",
    "node",
    "zce"
  ],
  "homepage": "https://github.com/zce/caz#readme",
  "bugs": {
    "url": "https://github.com/zce/caz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/caz.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "bin/caz.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint .",
    "compile": "tsc",
    "copy": "copyfiles -u 1 \"src/**/*.d.ts\" lib",
    "build": "run-s clean lint compile copy",
    "test": "jest",
    "cov": "jest --coverage",
    "prepare": "run-s build test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "standard-ts",
    "parserOptions": {
      "project": "tsconfig.eslint.json"
    },
    "ignorePatterns": [
      "lib"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 10000,
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "dependencies": {
    "cac": "^6.6.1",
    "chalk": "^4.1.0",
    "env-paths": "^2.2.0",
    "extract-zip": "^2.0.1",
    "fast-glob": "^3.2.4",
    "ini": "^2.0.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "ora": "^5.1.0",
    "prompts": "^2.4.0",
    "semver": "^7.3.4",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/ini": "1.3.30",
    "@types/jest": "26.0.19",
    "@types/lodash": "4.14.165",
    "@types/node": "14.14.13",
    "@types/node-fetch": "2.5.7",
    "@types/prompts": "2.0.9",
    "@types/semver": "7.3.4",
    "@types/validate-npm-package-name": "3.0.2",
    "copyfiles": "2.4.1",
    "eslint": "7.15.0",
    "eslint-config-standard-ts": "19.0.1",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=10.17"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
