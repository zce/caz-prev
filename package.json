{
  "name": "caz",
  "version": "0.6.0",
  "description": "A simple yet powerful template-based Scaffolding tools.",
  "keywords": [
    "scaffolding",
    "generator",
    "cli",
    "zce"
  ],
  "homepage": "https://github.com/zce/caz#readme",
  "bugs": {
    "url": "https://github.com/zce/caz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/caz.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "bin/caz.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "ts-standard",
    "clean": "rimraf lib",
    "compile": "tsc",
    "copy": "copyfiles -u 1 \"src/**/*.d.ts\" lib",
    "build": "npm run clean && npm run compile && npm run copy",
    "test": "jest --coverage",
    "prepare": "husky install .github/husky && npm run lint && npm run build && npm run test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "ts-standard --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 20000,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "dependencies": {
    "adm-zip": "^0.5.5",
    "cac": "^6.7.3",
    "env-paths": "^2.2.1",
    "fast-glob": "^3.2.5",
    "ini": "^2.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "ora": "^5.4.0",
    "prompts": "^2.4.1",
    "semver": "^7.3.5",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/adm-zip": "0.4.34",
    "@types/ini": "1.3.30",
    "@types/jest": "26.0.22",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.41",
    "@types/node-fetch": "2.5.10",
    "@types/prompts": "2.0.12",
    "@types/semver": "7.3.4",
    "@types/validate-npm-package-name": "3.0.2",
    "copyfiles": "2.4.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.5",
    "ts-standard": "10.0.0",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=10.12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
